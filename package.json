{
  "name": "ignews",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint \"src/**/*.*(ts|js|tsx)\"",
    "format": "prettier \"src/**/*.*(ts|js|tsx)\" --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "yarn lint --fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "next": "10.1.3",
    "next-auth": "^3.22.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.2.0",
    "sass": "^1.32.11",
    "stripe": "^8.145.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/next-auth": "^3.15.0",
    "@types/node": "^14.14.41",
    "@types/react": "^17.0.4",
    "lint-staged": "^11.0.0",
    "typescript": "^4.2.4"
  }
}
